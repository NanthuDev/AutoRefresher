{
  "name": "AutoRefresher",
  "version": "1.0.0",
  "description": "App which help to maintain the session",
  "manifest_version": 3,
  "author": "Nantha",
  "action": {
    "default_popup": "index.html",
    "default_title": "Resume the Session"
  },
  "icons": {
    "16": "./icons/16.png",
    "32": "./icons/32.png",
    "48": "./icons/48.png",
    "128": "./icons/128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "tabs", "activeTab", "alarms"]
}
